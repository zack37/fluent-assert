{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "block-scoped-var": 2,
    "no-use-before-define": 2,
    "space-in-parens": [2, "never"],
    "object-curly-spacing": [2, "always"],
    "quotes": [2, "single", "avoid-escape"]
  }
}
